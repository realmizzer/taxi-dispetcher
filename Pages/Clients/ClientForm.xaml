<Window x:Class="TaxiDispatcher.Pages.Client.ClientForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавление клиента" Height="250" Width="300"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Имя:" Grid.Row="0"/>
            <TextBox x:Name="FirstNameBox" Grid.Row="1" Margin="0,0,0,10"/>

            <TextBlock Text="Фамилия:" Grid.Row="2"/>
            <TextBox x:Name="LastNameBox" Grid.Row="3" Margin="0,0,0,10"/>

            <TextBlock Text="Телефон:" Grid.Row="4"/>
            <TextBox x:Name="PhoneBox" Grid.Row="5" Margin="0,0,0,20"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Click="Save_Click" Width="80" Margin="0,0,10,0"/>
            <Button Content="Отмена" Click="Cancel_Click" Width="80"/>
        </StackPanel>
    </Grid>
</Window>  